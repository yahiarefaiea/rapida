{
  "name": "rapid-api",
  "version": "0.0.1",
  "description": "Rapid JavaScript development environment",
  "main": "bin/server.js",
  "scripts": {
    "start": "run-p application eslint:watch test:watch",
    "start:prod": "cross-env NODE_ENV=production npm run application:prod",
    "application": "nodemon bin/server.js --exec babel-node --color",
    "application:prod": "babel-node bin/server.js --color",
    "eslint": "eslint *.js bin api --color",
    "eslint:watch": "chokidar --initial --silent \"*.js\" \"bin/**/*.js\" \"api/**/*.js\" -c \"npm run eslint\"",
    "test": "mocha --reporter progress bin/test.js \"api/**/*.test.js\" --color",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuotron/rapid-api.git"
  },
  "keywords": [
    "mvc",
    "feature-based",
    "web-framework",
    "starter-kit",
    "boilerplate",
    "express",
    "rapid",
    "REST",
    "API"
  ],
  "author": "Nuotron <hello@nuotron.co>",
  "license": "see license in license.md",
  "bugs": {
    "url": "https://github.com/nuotron/rapid-api/issues"
  },
  "homepage": "https://github.com/nuotron/rapid-api#readme",
  "dependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chalk": "^2.4.1",
    "chokidar-cli": "^1.2.1",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cross-env": "^5.2.0",
    "debug": "^4.1.0",
    "eslint": "^5.8.0",
    "express": "^4.16.4",
    "limax": "^1.7.0",
    "lodash": "^4.17.11",
    "mocha": "^5.2.0",
    "mongoose": "^5.3.9",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.6",
    "npm-run-all": "^4.1.3",
    "rapid-error-handler": "0.0.1"
  }
}
