{
  "name": "@rapid/ui",
  "version": "1.0.0",
  "description": "Rapid JavaScript development environment for building UI",
  "author": "Nuotron <hi@nuotron.co>",
  "license": "MIT",
  "repository": "https://github.com/nuotron/rapid/tree/master/packages/rapid-ui",
  "private": true,
  "scripts": {
    "serve": "run-p test:watch lint:watch webpack:dev serve-mock",
    "webpack:dev": "webpack-dev-server --config bin/webpack.config.dev.babel.js --color",
    "prebuild": "npm run clean",
    "build": "run-p test lint webpack:prod",
    "webpack:prod": "cross-env NODE_ENV=production webpack --config bin/webpack.config.prod.babel.js --color",
    "lint": "run-p eslint puglint stylint",
    "lint:watch": "run-p eslint:watch puglint:watch stylint:watch",
    "eslint": "eslint **/*.js --color",
    "eslint:watch": "chokidar --initial --silent \"bin/**/*.js\" \"ui/**/*.js\" -c \"npm run eslint\"",
    "puglint": "pug-lint --reporter node_modules/puglint-stylish ui --color",
    "puglint:watch": "chokidar --initial --silent \"ui/**/*.pug\" -c \"npm run puglint\"",
    "stylint": "stylint ui --color",
    "stylint:watch": "chokidar --initial --silent \"ui/**/*.styl\" -c \"npm run stylint\"",
    "test": "mocha --reporter progress bin/test.js ui/**/*.test.js --color",
    "test:watch": "chokidar --initial --silent \"ui/**/*.test.js\" -c \"npm run test\"",
    "generate-mock": "babel-node bin/generateMock.js",
    "preserve-mock": "npm run generate-mock",
    "serve-mock": "json-server --watch data/db.json --port 8081",
    "clean": "rimraf dist data"
  },
  "dependencies": {
    "@babel/core": "7.7.4",
    "@babel/node": "7.7.4",
    "@babel/preset-env": "7.7.4",
    "@babel/register": "7.7.4",
    "babel-loader": "8.0.6",
    "browser-sync": "2.26.7",
    "browser-sync-webpack-plugin": "2.2.2",
    "chai": "4.2.0",
    "chalk": "3.0.0",
    "chokidar-cli": "2.1.0",
    "copy-webpack-plugin": "5.0.5",
    "cross-env": "6.0.3",
    "css-loader": "3.2.1",
    "eslint": "6.7.2",
    "eslint-config-rapid": "0.1.0",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "imagemin-webpack-plugin": "2.4.2",
    "jsdom": "15.2.1",
    "json-schema-faker": "0.5.0-rc23",
    "json-server": "0.15.1",
    "kouto-swiss": "1.1.0",
    "lodash": "4.17.15",
    "mini-css-extract-plugin": "0.8.0",
    "mocha": "6.2.2",
    "npm-run-all": "4.1.5",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "pug": "2.0.4",
    "pug-html-loader": "1.1.5",
    "pug-lint": "2.6.0",
    "pug-lint-config-rapid": "0.1.0",
    "puglint-stylish": "1.0.2",
    "rimraf": "3.0.0",
    "stylint": "2.0.0",
    "stylus": "0.54.7",
    "stylus-loader": "3.0.2",
    "terser-webpack-plugin": "2.2.1",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "3.9.0",
    "webpack-merge": "4.2.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": "> 0.25%, not dead"
        }
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": "rapid",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "eslintIgnore": [
    "dist/"
  ],
  "pugLintConfig": {
    "extends": "rapid"
  },
  "stylintrc": {
    "blocks": false,
    "brackets": "never",
    "colors": "always",
    "commaSpace": "always",
    "commentSpace": "always",
    "cssLiteral": "never",
    "customProperties": [],
    "depthLimit": false,
    "duplicates": true,
    "efficient": "always",
    "exclude": [],
    "extendPref": "@extend",
    "globalDupe": true,
    "groupOutputByFile": true,
    "indentPref": 2,
    "leadingZero": "never",
    "maxErrors": false,
    "maxWarnings": false,
    "mixed": true,
    "mixins": [],
    "namingConvention": "camelCase",
    "namingConventionStrict": true,
    "none": "always",
    "noImportant": true,
    "parenSpace": "never",
    "placeholders": "never",
    "prefixVarsWithDollar": "never",
    "quotePref": "single",
    "reporterOptions": {
      "columns": [
        "lineData",
        "severity",
        "description",
        "rule"
      ],
      "columnSplitter": "  ",
      "showHeaders": false,
      "truncate": true
    },
    "semicolons": "never",
    "sortOrder": "grouped",
    "stackedProperties": "never",
    "trailingWhitespace": "never",
    "universal": false,
    "valid": true,
    "zeroUnits": "never",
    "zIndexNormalize": false
  }
}
