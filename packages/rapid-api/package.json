{
  "name": "@rapid/api",
  "version": "0.1.1",
  "description": "Rapid JavaScript development environment for building RESTful API",
  "main": "bin/server.js",
  "author": "Nuotron <hi@nuotron.co>",
  "license": "ISC",
  "repository": "https://github.com/nuotron/rapid-api",
  "private": true,
  "engines": {
    "node": "10.x"
  },
  "scripts": {
    "start": "run-p test:watch lint:watch server",
    "server": "nodemon bin/server.js --exec babel-node --color",
    "server:prod": "cross-env NODE_ENV=production babel-node bin/server.js --color",
    "lint": "eslint **/*.js --color",
    "lint:watch": "chokidar --initial --silent \"bin/**/*.js\" \"api/**/*.js\" -c \"npm run lint\"",
    "test": "mocha --reporter progress bin/test.js api/**/*.test.js --color",
    "test:watch": "chokidar --initial --silent \"api/**/*.test.js\" -c \"npm run test\""
  },
  "dependencies": {
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chalk": "^2.4.2",
    "chokidar-cli": "^1.2.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-rapid": "^0.1.0",
    "express": "^4.17.0",
    "limax": "^1.7.0",
    "lodash": "^4.17.11",
    "mocha": "^6.1.4",
    "mongoose": "^5.5.9",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.0",
    "npm-run-all": "^4.1.5",
    "rapid-error-handler": "^0.1.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": "> 0.25%, not dead"
        }
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": "rapid",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  }
}
